<h1>Movies</h1>


<% @movies.each do |movie| %>
  <article>
    <header> <h2> <%= movie.title %></h2> </header> 
    <p> <%= movie.description %>
  <table>
    <tr>
      <th>Rating</th>
      <td><%= movie.rating %></td>
    </tr>
    <tr>
      <th>Total Gross:</th>
      <td><%= number_to_currency movie.total_gross %></td>
    </tr>
    <tr>
      <th>Released:</th>
      <td><%= movie.released_on %></td>   
    </tr>
  </table>
</article>
  <% end %>
